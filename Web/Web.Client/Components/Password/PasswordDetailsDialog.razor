@using Core.Models
@inject MudBlazor.IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Détails du mot de passe</MudText>
        <MudDivider />
        @if (Password != null)
        {
            <MudText><strong>Titre :</strong> @Password.Title</MudText>
            <MudText><strong>Nom d'utilisateur :</strong> @Password.Username</MudText>
            <MudText><strong>URL :</strong> @Password.Url</MudText>
            <MudText><strong>Créé le :</strong> @Password.CreatedAt.ToLocalTime().ToString("g")</MudText>
            <MudText><strong>Notes :</strong> @Password.Notes</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Fermer</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public PasswordEntry Password { get; set; }
    
    void Close() => MudDialog.Close();
}